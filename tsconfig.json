{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Types */
        "types": ["vite/client", "ziggy-js"],

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Path mapping */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/*"],
            "@ts/*": ["./resources/ts/*"],
            "@app/*": ["./resources/ts/app/*"],
            "@layouts/*": ["./resources/ts/layouts/*"],
            "@features/*": ["./resources/ts/features/*"],
            "@hooks/*": ["./resources/ts/hooks/*"],
            "@images/*": ["./resources/images/*"],
            "@sass/*": ["./resources/sass/*"],
            "@components/*": ["./resources/ts/components/*"]
        }
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.tsx",
        "resources/ts/**/*.d.ts"
, "resources/ts/utils/ziggy.ts"    ],
    "exclude": [
        "node_modules"
    ]
}
